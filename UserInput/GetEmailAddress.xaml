        <TextBox x:Name="EmailAddress" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="384"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="319,38,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
